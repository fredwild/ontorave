      <% if @count.to_i < 1200 then %>
        &nbsp; &nbsp; &nbsp;
        <%= link_to( "Show All",    params.merge({:controller => 'tags', :action => 'list', :query => @query[:name], :order_by => params[:order_by], :page => 1, :page_length => @count})) %>
      <% end %>
        </span></span>
    </div>          
