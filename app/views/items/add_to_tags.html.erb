<div id="add_new_to_tags" style="float:right; width:60%;">
   <% dest = url_for :controller => 'items', :action => 'update_tags', :id => @item.id %>
   <% form_tag( :controller => 'tags', :action => 'new', :redirect => dest ) do %>
       <%= submit_tag 'Add New...' %>
   <% end %> <!-- end form_tag -->
</div>

<div id="add_to_tags_list">
   <% form_tag( :controller => 'items', :action => :update_tags, :id => @item ) do %>
       <%= submit_tag 'Add Selected' %>
       <p class="select_list">&nbsp;</p>
       <% for tag in @tags %>
           <p class="select_list"> <%= check_box_tag("tag_ids[]",tag.id) %> <%= tag.sname %> </p>
       <% end %>
       <p class="select_list">&nbsp;</p>
       <%= submit_tag 'Add Selected' %>
   <% end %> <!-- end form_tag -->
</div>

